@font-face {
    font-family: myFirstFont;
    src: url(HelveticaNeue-Light.otf);
}
h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6,.site-nav,body{font-family: myFirstFont;
font-weight: bold;
}
.header-bar__left {float:left;width:40px;line-height:0;}
.menu-header{float:left}
.site-nav {
    border:none;
    margin:0px;
  
}
.site-nav__link{color: #777;}
.site-nav__link:hover{color: #333;}
.site-nav__link:active{color:#F00;}
.logo_header{float:left;margin-left: 70px;}
.search-cart{float:right;}
 .text-center h4{display:none;}
.site-footer__links li{float:left;padding: 0px 79px;}
.site-footer__links li a{margin: 0px 2.5px;
display: inline-block;
font-size: 25px;}
.site-header{padding:0px;}
.header-bar__right_new {float:left;}
.soild{float:left;}
.soild .social-icons li .icon {
    font-size: 16px;
    line-height: 36px;
}

.header-bar__right_new .header-bar__sep{padding:0px;}
.site-header{

  z-index: 100;
  background-color: rgba(247, 247, 247, 0);
  width: 100%;
  margin: 0 auto;
  
 
}
.site-header:hover{background:#fff;transition: all 1s;}
.header-bar__search,.header-bar {background-color: rgba(247, 247, 247, 0);}
.wrapper{max-width:100%;}
.header-bar__search-input{display:none;}
#dialog .search-bar{max-width:100%}
#AddToCart{color: #A8A8A8;
background-color: #000;
cursor: pointer;
width: 100%;}
label[for] {
    cursor: pointer;
    float: left;
    padding-right: 20px;
    font-size: medium;
    font-weight: bold;
}
.product-single__quantity .quantity-selector {
    display: inline-block;
    width: 52px;
    height: 30px;
    background: #EFEFEF;
    border: none;
}
.product-single__price{color:#000;}
.product-description{
font-size: 12px;
font-weight: initial;
line-height: 1.4;
}
.Also{
text-align: center;

}

.mc-image:nth-child(4n+1){
display:none !important;
}

.product_also{
width:745px;
  margin:auto;
  margin-top:40px;
}
.site-footer a{color:#000;
font-size: 25px;
  margin: 0px 2.5px;
}
.site-footer__links{display:none;}
.h1.site-header__logo, h1.site-header__logo, .site-header__logo.h1 {
    font-size: 43.2px;
}
.site-footer {
   
    background: #f8f8f8;
}
.grid-link__title {
    font-family: myFirstFont;
    color: #333;
    line-height: 1.4;
    font-weight: 500;
    font-size: 14px;
    font-weight: bold;
}
#add-cart-new{
 text-align: justify; position: absolute; 
  z-index: 80;
  width:35%;
	margin-top:50px;
}
.site-footer input {
    max-width: 100%;
}
.form_footer{
    width: 600px;
    margin: auto;
  padding-bottom: 20px;
}
.form_footer #subscribe{
color: #A8A8A8;
background-color: #000;
cursor: pointer;

}
.form_footer #mail{
width: 80% !important;
float: left;
  transition: all 200ms ease-out 0s;
box-sizing: border-box;
background-color: transparent;
border-bottom: 2px solid #000;
color: #777 !important;
font-size: 25px;
margin: 0px;
padding: 0px 20px 0px 0px;
border-top: none;
border-left: none;
border-right: none;
}
.site-nav__dropdown{z-index:999;margin-top:-10px;}
@media screen and (max-width: 760px){
.soild,.header-bar__right_new, #opener{display:none;}
 .product_also, #add-cart-new{width:100%}
  .logo_header{float:left;margin:0px;}
  .h1.site-header__logo, h1.site-header__logo, .site-header__logo.h1 {
    font-size: 30px;
}
  .form_footer{width:100%}
  h1, .h1 {
    font-size: 22px;
    line-height: 1;
}
  .mobie_new{
    width: 228px;
margin-top: -38px;
  
  }
}

@media screen and (max-width: 480px){
  .mobile-cart-page-link{
  text-align: left;
float: left;
  }
  .logo_header{float:none;}
}
